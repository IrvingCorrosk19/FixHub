<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] â€” FixHub</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FixHub.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg fixhub-navbar">
            <div class="fixhub-container container-fluid">
                <a class="navbar-brand" asp-page="/Index">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>
                    FixHub
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#fixhubNav" aria-label="Abrir menÃº">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="fixhubNav">
                    <ul class="navbar-nav me-auto align-items-lg-center">
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Requests/My">Mis solicitudes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Requests/New">Solicitar servicio</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Jobs/Index">Trabajos</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index" asp-fragment="como-funciona">CÃ³mo funciona</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Recruit/Apply">Trabaja con nosotros</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-lg-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @await Component.InvokeAsync("NotificationBell")
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity.Name
                                    <span class="badge badge-role ms-1">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    @if (User.IsInRole("Customer"))
                                    {
                                        <li><a class="dropdown-item" asp-page="/Requests/My">Mis solicitudes</a></li>
                                        <li><a class="dropdown-item" asp-page="/Requests/New">Solicitar servicio</a></li>
                                    }
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item fw-semibold" asp-page="/Admin/Dashboard">ðŸ“Š Dashboard</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Applicants">Postulantes</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Issues">Incidencias</a></li>
                                    }
                                    @if (User.IsInRole("Technician"))
                                    {
                                        <li><a class="dropdown-item" asp-page="/Technician/MyAssignments">Mis asignaciones</a></li>
                                        <li><a class="dropdown-item" asp-page="/Technicians/Profile" asp-route-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value">Mi perfil tÃ©cnico</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-page="/Notifications/Index">ðŸ”” Notificaciones</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item text-danger" asp-page="/Account/Logout">Cerrar sesiÃ³n</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">Ingresar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Register">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="fixhub-main flex-grow-1">
        @* TempData ocultos â€” los consume el toast JS *@
        @if (TempData["Success"] is string successMsg)
        {
            <div id="toastDataSuccess" data-message="@successMsg" style="display:none"></div>
        }
        @if (TempData["Error"] is string errorMsg)
        {
            <div id="toastDataError" data-message="@errorMsg" style="display:none"></div>
        }

        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    @* â”€â”€ TOAST CONTAINER (posiciÃ³n fija, bottom-right) â”€â”€ *@
    <div id="fixhubToastContainer" class="fixhub-toast-container" aria-live="polite" aria-atomic="true"></div>

    <footer class="fixhub-footer">
        <div class="fixhub-container text-center">
            &copy; @DateTime.UtcNow.Year FixHub â€” Servicios tÃ©cnicos del hogar &nbsp;Â·&nbsp;
            <a href="mailto:soporte@fixhub.com" class="text-muted">soporte@fixhub.com</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
