@page
@model FixHub.Web.Pages.Jobs.CreateModel
@{
    ViewData["Title"] = "Solicitar servicio";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <h2 class="mb-3">Solicitar servicio</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.CategoryId" class="form-label">Categoría</label>
                        <select asp-for="Input.CategoryId" class="form-select">
                            <option value="">— Selecciona —</option>
                            <option value="1">Plomería</option>
                            <option value="2">Electricidad</option>
                            <option value="3">Handyman</option>
                            <option value="4">Aire Acondicionado</option>
                            <option value="5">Pintura</option>
                            <option value="6">Cerrajería</option>
                        </select>
                        <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Title" class="form-label">Título</label>
                        <input asp-for="Input.Title" class="form-control" placeholder="Ej. Fuga de agua en cocina" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Descripción</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="4"
                                  placeholder="Describe el problema con el mayor detalle posible..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.AddressText" class="form-label">Dirección</label>
                        <input asp-for="Input.AddressText" class="form-control" placeholder="Calle, ciudad, referencias..." />
                        <span asp-validation-for="Input.AddressText" class="text-danger"></span>
                    </div>
                    <div class="d-flex gap-2 mt-2">
                        <button type="submit" class="btn btn-primary">Enviar solicitud</button>
                        <a asp-page="/Jobs/Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
