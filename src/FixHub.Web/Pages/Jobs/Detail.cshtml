@page "{id:guid}"
@model FixHub.Web.Pages.Jobs.DetailModel
@{
    ViewData["Title"] = Model.Job?.Title ?? "Detalle del trabajo";
}

@if (Model.Job is null)
{
    <div class="alert alert-danger">Trabajo no encontrado.</div>
}
else
{
    var job = Model.Job;
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h3 class="mb-0">@job.Title</h3>
                        <span class="badge fs-6 @FixHub.Web.Pages.Jobs.DetailModel.StatusBadge(job.Status)">@job.Status</span>
                    </div>
                    <p class="text-muted small">
                        <strong>CategorÃ­a:</strong> @job.CategoryName &nbsp;|&nbsp;
                        @if (Model.IsOwner)
                        {
                            <strong>Tu solicitud</strong>
                        }
                        else
                        {
                            <strong>Publicado por:</strong> @job.CustomerName
                        }
                        &nbsp;|&nbsp; @job.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </p>
                    <hr />
                    <p>@job.Description</p>
                    <p><strong>DirecciÃ³n:</strong> @job.AddressText</p>
                    @if (job.BudgetMin.HasValue || job.BudgetMax.HasValue)
                    {
                        <p>
                            <strong>Presupuesto:</strong>
                            $@(job.BudgetMin?.ToString("N2") ?? "?") â€” $@(job.BudgetMax?.ToString("N2") ?? "?")
                        </p>
                    }
                </div>
                <div class="card-footer d-flex gap-2 flex-wrap">
                    @if (Model.IsCustomer && Model.IsOwner && (job.Status == "Assigned" || job.Status == "InProgress"))
                    {
                        <form method="post" asp-page-handler="Complete">
                            <button type="submit" class="btn btn-success"
                                    onclick="return confirm('Â¿Marcar este trabajo como completado?')">
                                Marcar como completado
                            </button>
                        </form>
                    }
                    @if (Model.IsCustomer && Model.IsOwner && job.Status == "Completed" && !Model.HasReview)
                    {
                        <a asp-page="/Reviews/Create" asp-route-jobId="@job.Id"
                           asp-route-technicianId="@Model.AssignedTechnicianId"
                           class="btn btn-warning">Dejar reseÃ±a</a>
                    }
                    <a asp-page="@(Model.IsOwner ? "/Requests/My" : "/Jobs/Index")" class="btn btn-outline-secondary">Volver</a>
                </div>
            </div>

            @* Flujo cliente: mensaje de espera o tÃ©cnico asignado *@
            @if (Model.IsOwner)
            {
                @if (job.Status == "Open" && (Model.Proposals == null || Model.Proposals.Count == 0))
                {
                    <div class="fixhub-trust-box mt-3">
                        <p class="mb-0"><strong>Hemos recibido tu solicitud.</strong> FixHub te asignarÃ¡ un tÃ©cnico y te contactaremos pronto.</p>
                    </div>
                }
                else if ((job.Status == "Assigned" || job.Status == "InProgress") && Model.AssignedTechnicianProfile != null)
                {
                    var tp = Model.AssignedTechnicianProfile;
                    <div class="fixhub-proposal-card-v2 mt-3">
                        <div class="fixhub-proposal-card-v2-body">
                            <h5 class="fixhub-section-title mb-2">TÃ©cnico asignado</h5>
                            <div class="d-flex flex-wrap align-items-center gap-2 mb-2">
                                <strong class="fixhub-proposal-name-v2">@tp.FullName</strong>
                                <span class="badge badge-verified">âœ” TÃ©cnico FixHub verificado</span>
                                <span class="badge badge-verified">âœ” Antecedentes validados</span>
                                <span class="badge badge-verified">âœ” Capacitado por FixHub</span>
                            </div>
                            <p class="fixhub-rep-meta mb-0">@tp.Email @if (!string.IsNullOrEmpty(tp.Phone)) { <span>Â· @tp.Phone</span> }</p>
                            <a asp-page="/Technicians/Profile" asp-route-id="@tp.UserId" class="btn btn-fixhub-outline btn-sm mt-2">Ver perfil del tÃ©cnico</a>
                        </div>
                    </div>
                }
            }

            <!-- Proposals: solo Admin (no se muestra comparaciÃ³n al cliente) -->
            @if (Model.CanSeeProposals && !Model.IsOwner && Model.Proposals is not null)
            {
                <h5 class="fixhub-section-title mb-3">Propuestas (@Model.Proposals.Count)</h5>
                @if (Model.Proposals.Count == 0)
                {
                    <p class="text-muted">AÃºn no hay propuestas.</p>
                }
                else
                {
                    <div class="fixhub-proposals-list">
                        @foreach (var p in Model.Proposals)
                        {
                            var profile = Model.TechnicianProfiles.GetValueOrDefault(p.TechnicianId);
                            var rating = profile != null ? (double)profile.AvgRating : 0d;
                            <div class="fixhub-proposal-card-v2">
                                <div class="fixhub-proposal-card-v2-body">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                                        <div class="fixhub-proposal-card-v2-left">
                                            <div class="d-flex align-items-center gap-2 flex-wrap mb-2">
                                                <h6 class="fixhub-proposal-name-v2 mb-0">@p.TechnicianName</h6>
                                                <span class="badge bg-light text-dark">@p.Status</span>
                                                @if (profile?.IsVerified == true)
                                                {
                                                    <span class="badge badge-verified">âœ” TÃ©cnico verificado</span>
                                                }
                                            </div>
                                            @if (profile != null)
                                            {
                                                <div class="fixhub-proposal-rating-block mb-2">
                                                    <span class="fixhub-proposal-rating-num">@profile.AvgRating.ToString("N1")</span>
                                                    <span class="fixhub-stars fixhub-stars-lg"><partial name="_Stars" model="@rating" /></span>
                                                </div>
                                                <ul class="fixhub-proposal-trust-list">
                                                    <li>âœ” @profile.CompletedJobs trabajos completados</li>
                                                    @if (profile.IsVerified)
                                                    {
                                                        <li>âœ” TÃ©cnico verificado</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                        <div class="fixhub-proposal-price-block">
                                            <span class="fixhub-proposal-price-label">Precio propuesto</span>
                                            <span class="fixhub-proposal-price-value">$@p.Price.ToString("N0")</span>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(p.Message))
                                    {
                                        <div class="fixhub-proposal-message">
                                            <span class="fixhub-proposal-message-label">Mensaje del tÃ©cnico</span>
                                            <p class="fixhub-proposal-message-text">@p.Message</p>
                                        </div>
                                    }
                                    <div class="fixhub-proposal-actions">
                                        <a asp-page="/Technicians/Profile" asp-route-id="@p.TechnicianId"
                                           class="btn btn-fixhub-outline btn-sm">Ver perfil</a>
                                        @if ((Model.IsOwner || Model.IsAdmin) && p.Status == "Pending" && job.Status == "Open")
                                        {
                                            <form method="post" asp-page-handler="Accept" asp-route-proposalId="@p.Id" class="d-inline">
                                                <button type="submit" class="btn btn-fixhub-primary btn-sm"
                                                        onclick="return confirm('Â¿Aceptar la propuesta de @p.TechnicianName? El tÃ©cnico quedarÃ¡ asignado al trabajo.')">
                                                    Aceptar propuesta (asignar trabajo)
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @* FASE 2 â€” SecciÃ³n de protecciÃ³n *@
                    <div class="fixhub-trust-box mt-4">
                        <h6 class="fixhub-trust-box-title">Tu seguridad al contratar</h6>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="fixhub-trust-box-item">
                                    <span class="fixhub-trust-box-icon">ðŸ”’</span>
                                    <span class="fixhub-trust-box-text">Pago protegido por FixHub</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="fixhub-trust-box-item">
                                    <span class="fixhub-trust-box-icon">ðŸ›¡</span>
                                    <span class="fixhub-trust-box-text">ProtecciÃ³n ante incidencias</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="fixhub-trust-box-item">
                                    <span class="fixhub-trust-box-icon">ðŸ“ž</span>
                                    <span class="fixhub-trust-box-text">Soporte disponible</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

            <!-- Submit proposal form (Technician only, Open job) -->
            @if (Model.IsTechnician && job.Status == "Open" && !Model.AlreadyProposed)
            {
                <div class="card shadow-sm mt-3">
                    <div class="card-header bg-light">Enviar propuesta</div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.ProposalError))
                        {
                            <div class="alert alert-danger">@Model.ProposalError</div>
                        }
                        <form method="post" asp-page-handler="SubmitProposal">
                            <div class="row g-2">
                                <div class="col-md-4">
                                    <label class="form-label">Precio ($)</label>
                                    <input asp-for="ProposalInput.Price" class="form-control" type="number" step="0.01" min="1" />
                                    <span asp-validation-for="ProposalInput.Price" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">DÃ­as estimados</label>
                                    <input asp-for="ProposalInput.EstimatedDays" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="ProposalInput.EstimatedDays" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mt-2">
                                <label class="form-label">Carta de presentaciÃ³n</label>
                                <textarea asp-for="ProposalInput.CoverLetter" class="form-control" rows="3"
                                          placeholder="Describe tu experiencia y por quÃ© eres el indicado..."></textarea>
                                <span asp-validation-for="ProposalInput.CoverLetter" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mt-2">Enviar propuesta</button>
                        </form>
                    </div>
                </div>
            }
            else if (Model.IsTechnician && Model.AlreadyProposed)
            {
                <div class="alert alert-info mt-3">Ya enviaste una propuesta para este trabajo.</div>
            }
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
