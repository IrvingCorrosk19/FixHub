@page
@model FixHub.Web.Pages.Admin.IssuesModel
@{
    ViewData["Title"] = "Incidencias";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fixhub-section-title mb-0">Incidencias reportadas</h2>
    @if (Model.Issues != null)
    {
        <span class="badge fixhub-badge-pending fs-6">@Model.Issues.TotalCount total</span>
    }
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.Issues != null && Model.Issues.Items.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Fecha</th>
                    <th>Tipo de problema</th>
                    <th>Solicitud</th>
                    <th>Reportado por</th>
                    <th>Detalle</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var issue in Model.Issues.Items)
                {
                    <tr>
                        <td class="small text-muted text-nowrap">
                            @issue.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td>
                            <span class="badge @IssuesModel.ReasonBadgeClass(issue.Reason)">
                                @IssuesModel.ReasonLabel(issue.Reason)
                            </span>
                        </td>
                        <td class="fw-semibold">
                            <a asp-page="/Jobs/Detail" asp-route-id="@issue.JobId"
                               class="text-decoration-none">
                                @issue.JobTitle
                            </a>
                        </td>
                        <td>@issue.ReportedByName</td>
                        <td class="small text-muted" style="max-width:220px">
                            @if (!string.IsNullOrEmpty(issue.Detail))
                            {
                                <span title="@issue.Detail">
                                    @(issue.Detail.Length > 80 ? issue.Detail[..80] + "…" : issue.Detail)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td>
                            <a asp-page="/Jobs/Detail" asp-route-id="@issue.JobId"
                               class="btn btn-sm btn-fixhub-outline">
                                Ver solicitud
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Issues.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @for (var i = 1; i <= Model.Issues.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Issues.Page ? "active" : "")">
                        <a class="page-link" asp-page="/Admin/Issues" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else if (string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="fixhub-trust-box text-center py-5">
        <p class="text-muted mb-0">✅ No hay incidencias reportadas.</p>
    </div>
}
