@page
@model FixHub.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Iniciar sesión</h4>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                        <input asp-for="Input.Email" class="form-control" type="email" placeholder="tu@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <input asp-for="Input.Password" class="form-control" type="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Entrar</button>
                </form>
            </div>
            <div class="card-footer text-center text-muted small">
                ¿No tienes cuenta? <a asp-page="/Account/Register">Regístrate aquí</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
